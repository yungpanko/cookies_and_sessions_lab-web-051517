<%= form_tag("/add") do %>
  <%= label_tag('product', "product name") %>
  <%= text_field_tag('product') %>
  <%= submit_tag "add to cart" %>
<% end %>
<br>
</br>
<h1>Currently in cart</h1>
<% unless cart.empty? %>
  <ul>
    <% cart.each do |item| %>
      <li> <%= item %> </li>
    <% end %>
  </ul>
<% end %>
